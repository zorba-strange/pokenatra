<h2>Edit this Trainer</h2>
<form action="/trainer/<%= @trainer.id %>" method="post">
  <input type="hidden" name="_method" value="put">

  <label>Name: </label>
  <input type="text" name="trainer[name]" value="<%= @trainer.name %>">

  <label>Level: </label>
  <input type="text" name="trainer[power_level]" value="<%= @trainer.power_level %>">

  <label>Image Url: </label>
  <input type="text" name="trainer[img_url]" value="<%= @trainer.img_url %>">

  <input type="submit" value="UPDATE">

</form>


